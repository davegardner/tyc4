<html>
  <head>
    <title>Eleventy + Netlify CMS from scratch</title>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>

  <body>
    <header>
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml | safe }}</header>
    <h1>
      Tanga Yacht Club
    </h1>
    {{ content | safe }}

    {# The following script supports Netlify CMS #}
    <script>
      if (window.netlifyIdentity) {
        window
          .netlifyIdentity
          .on("init", user => {
            if (!user) {
              window
                .netlifyIdentity
                .on("login", () => {
                  document.location.href = "/admin/";
                });
            }
          });
      }
    </script>
  </body>

</html>