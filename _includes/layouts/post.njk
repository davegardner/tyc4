---
layout: layouts/base.njk
---
<header>
    <h1>Tanga Yacht Club</h1>
    <nav>
        {{ collections.all | eleventyNavigation | eleventyNavigationToHtml | safe }}
    </nav>
</header>

<img class="post-splash" src="{{ featuredImage | url }}" alt="{{ featuredImageTitle }}" ></img>

<main >
    <article>
        <div class="content">

            <h2>{{ title }}</h2>

            <h3>
                {{ date | readableDate }}
                {% for tag in tags %}
                    <span class="tag">{{ tag }}</span>
                {% endfor %}
            </h3>
            <p>{{ content | safe }}</p>

        </div>
    </article>
    <aside>
        <p>This is an important aside.</p>
    </aside>
</main>