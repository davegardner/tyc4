<ul>

    {% for post in postslist | sort(postslist, reverse, caseSens, attr) %}
        <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            -
            <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
            -
            <span>{{ post.data.description }}</span>
        </li>
    {% endfor %}
</ul>