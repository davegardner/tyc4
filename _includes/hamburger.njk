<nav title="Menu...">
    <div id="menuToggle">
        <input id="hamburgerButton" type="checkbox"/>
        <span></span>
        <span></span>
        <span></span>
        {# This makes a multilevel menu #}
        {# {{ collections.all | eleventyNavigation | eleventyNavigationToHtml({listClass: "nav-list-class"}) | safe }} #}
        
        {# This makes a single level meny, but provides control over layout #}
        {% set navPages = collections.all | eleventyNavigation %}
        <ul id="menu">
            {%- for entry in navPages %}
                <li{% if entry.url == page.url %} class="my-active-class"{% endif %}>
                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                </li>
            {%- endfor %}
        </ul>
    </div>
</nav>